{
  "name": "jobwala-react-native",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "expo:web": "expo start --web",
    "mobile": "expo start",
    "prebuild": "npx expo prebuild --clean",
    "prebuild:android": "npx expo prebuild --platform android --clean",
    "prebuild:ios": "npx expo prebuild --platform ios --clean",
    "build:android:apk": "cd android && gradlew.bat assembleRelease || ./gradlew assembleRelease",
    "build:android:aab": "cd android && gradlew.bat bundleRelease || ./gradlew bundleRelease",
    "build:android:clean": "cd android && gradlew.bat clean || ./gradlew clean",
    "build:ios": "cd ios && xcodebuild -workspace FreeJobWala.xcworkspace -scheme FreeJobWala -configuration Release archive -archivePath build/FreeJobWala.xcarchive"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.2",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-native-community/datetimepicker": "8.4.4",
    "@react-native-picker/picker": "2.11.1",
    "@react-navigation/native": "^6.1.7",
    "@react-navigation/stack": "^6.3.17",
    "axios": "^1.5.0",
    "expo": "54.0.23",
    "expo-constants": "^18.0.10",
    "expo-document-picker": "~14.0.7",
    "expo-file-system": "^19.0.17",
    "expo-font": "~14.0.9",
    "expo-image-picker": "^17.0.8",
    "expo-linear-gradient": "~15.0.7",
    "expo-sharing": "^14.0.7",
    "expo-status-bar": "~3.0.8",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-html-to-pdf": "^1.3.0",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-view-shot": "^4.0.3",
    "react-native-web": "^0.21.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.18.9",
    "@react-native-community/cli": "^15.0.0"
  },
  "resolutions": {
    "@react-native/dev-middleware": "0.81.5"
  },
  "private": true
}
