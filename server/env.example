# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/jobwala?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Client/Frontend URL (for email links and redirects)
CLIENT_URL=https://yourdomain.com

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# WhatsApp API Configuration (Optional)
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# SMS API Configuration (Optional)
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=your-sender-id
SMS_API_URL=https://api.sms-provider.com

# Google Jobs API Configuration (Optional)
GOOGLE_JOBS_API_KEY=your-google-jobs-api-key
GOOGLE_JOBS_PUBLISHER_ID=your-publisher-id

# OpenAI API Key (for resume parsing - Optional)
OPENAI_API_KEY=your-openai-api-key

# CORS Origins (comma-separated list of allowed origins)
# Example: https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGINS=https://yourdomain.com

